<div class="container">
<div class="container text-danger col-md-9">
  <h2 align="center">AddClassRoom</h2>
  <%= form_for @classroom do |f| %>
    <div class="form-group" >
       <%= f.label :name , class:"control-label col-sm-2" %>
       <div class="col-sm-10"> 
       <%= f.text_field :name , class: "form-control" %>
    </div>
    </div>
    <div class="form-group" >
       <%= f.label :students_count , class:"control-label col-sm-2" %>
       <div class="col-sm-10"> 
       <%= f.text_field :no_of_students, class: "form-control" %>
    </div>
    </div>
    <div class="form-group" >
       <%= f.label :description , class:"control-label col-sm-2" %>
       <div class="col-sm-10"> 
       <%= f.text_area :description, class: "form-control" %>
    </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <%=f.submit 'Submit', class: "btn btn-primary" %>
    </div>
    </div>
    </div>
    <!-- error messages -->
    <div class="container">
    <% if @classroom.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<%= pluralize(@classroom.errors.count, "error") %>_occur
			<ul class="nav">
			 <div class="comtainer">
			<% @classroom.errors.full_messages.each do |m| %>
			<li><%= m %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	</div>
  <% end %>
 </ul>
 </div>
</div>  


